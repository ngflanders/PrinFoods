<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.ngflanders.android.prinfoods.DiningHoursActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/lightBlue"
        >

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/dateSwitch"
            android:thumb="@drawable/custom_date_switch_selector"
            android:track="@drawable/custom_date_switch_track"
            android:layout_gravity="center_horizontal"
            android:textOn="Tomorrow"
            android:textOff="Today"
            android:showText="true"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/dateTextView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/smoothie_bitmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <Button
            android:text="Breakfast&#10;'Times'"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/BreakfastButton"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:visibility="visible"
            android:background="@android:color/darker_gray" />

        <Button
            android:text="Lunch&#10;'Times'"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/LunchButton"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:visibility="visible"
            android:background="@android:color/darker_gray" />

        <Button
            android:text="Dinner&#10;'Times'"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/DinnerButton"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:onClick="onButtonClick" />

    </LinearLayout>

</LinearLayout>
